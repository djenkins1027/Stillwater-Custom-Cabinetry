<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="view_finish_code_form" model="ir.ui.view">
        <field name="name">view_finish_code_form</field>
        <field name="model">finish.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Finish Code">
                    <div class="oe_title">
                        <h1>
                          <field name="name" required="1"/>
                        </h1>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="view_finish_code_tree" model="ir.ui.view">
        <field name="name">view_finish_code_tree</field>
        <field name="model">finish.code</field>
        <field name="arch" type="xml">
            <tree string="Finish Code">
                <field name="name" modifiers="{}" />
            </tree>
        </field>
    </record>

    <record id="view_finish_code_kanban" model="ir.ui.view">
        <field name="model">finish.code</field>
        <field name="name">view_finish_code_kanban</field>
        <field name="arch" type="xml">
            <kanban string="Finish Code">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_content">
                                <field name="name" modifiers="{}" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='action_view_finish_code' model='ir.actions.act_window'>
        <field name='name'>Finish Codes</field>
        <field name='res_model'>finish.code</field>
        <field name='type'>ir.actions.act_window</field>
        <field name='view_mode'>kanban,tree,form</field>
        <field name='domain'>[]</field>
        <field name='context'>{}</field>
    </record>

    <menuitem id="root_menu_finish_codes"
              name="Finish Codes"
              sequence="10"
              web_icon="fa fa-diamond,#f1c40f,#34495e"/>

    <menuitem id="menu_action_view_finish_code"
              name="Finish Codes"
              parent="root_menu_finish_codes"
              sequence="2"
              action="action_view_finish_code"/>
</odoo>