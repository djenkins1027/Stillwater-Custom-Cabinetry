<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_move_view_inherit_stillwater_mrp" model="ir.ui.view">
        <field name="name">stock.move.view.inherit.stillwater_mrp</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="mrp.view_stock_move_lots"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_qty']" position="replace">
                <field name="product_uom_qty" nolabel="1" attrs="{'readonly': [('parent.state', '!=', 'confirmed')]}"/>
            </xpath>
        </field>
    </record>
    <record id="mrp_production_view_from_inherit_stillwater_mrp" model="ir.ui.view">
        <field name="name">mrp.production.view.from.inherit.stillwater_mrp</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='move_raw_ids']/tree" position="attributes">
                      <attribute name="editable">top</attribute>
                </xpath>
                <xpath expr="//field[@name='move_raw_ids']/tree//field[@name='product_uom_qty']" position="attributes">
                      <attribute name="attrs">{'readonly': [('parent.state', '!=', 'confirmed')]}</attribute>
                      <attribute name="context">{'oc_flag': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="sale_line_id" invisible="1"/>
                    <field name="spec_group" readonly="1"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
